<Window x:Class="CC_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CC_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin = "10">
            <Label Content="Time:" HorizontalAlignment="Center" VerticalAlignment="Top" Width="41"/>
            <Label Content="{Binding Path=Time}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="90"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin = "10,40,0,0">
            <Button Content="Pause" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Pause"/>
            <Button Content="Play" Margin="10" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Click="Play"/>
            <Button Content="Stop" Margin="10" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Click="Stop"/>
        </StackPanel>
    </Grid>
</Window>
